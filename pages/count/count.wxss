.page-top {
  width: 750rpx;
  height: auto;
  z-index: 2;
  position: fixed;
}

.score {
  align-items: center;
  padding: 50rpx 0 40rpx 0;
  display: flex;
  width: 100%;
  justify-content: center;
}

.win_score {
  color: #3e4a53;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.win_time {
  color: #3e4a53;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

.playing {
  font-size: 34rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.page-bottom {
  margin-top: 50rpx;
  z-index: 1;
  box-sizing: border-box;
  text-align: center;
  width: 100%;
  position: fixed;
  background: transparent;
  justify-content: center;
  display: flex;
}

.page-numbers {
  /* position: absolute; *//* top: 200rpx; */
  width: 100%;
  text-align: center;
  z-index: 5;
  display: flex;
  justify-content: center;
}

.result-box {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
}

.result-exp {
  width: 80%;
  border: 1rpx solid gray;
  height: 100rpx;
  justify-content: center;
  border-radius: 10rpx;
  display: block;
  font-size: 48rpx;
  color: #3e4a53;
  background: white;
  padding-left: 30rpx;
  line-height: 100rpx;
  overflow: scroll;
  margin: 0 20rpx;
}

.result-ac {
  width: 20%;
  height: 102rpx;
  color: white;
  margin: 0 20rpx 0 0;
}

.number {
  display: inline-block;
  width: 70rpx;
  margin: 10rpx;
  vertical-align: middle;
  text-align: center;
}

.result-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 18;
}

.success {
  color: red;
}

.fail {
  color: #79caff;
  background: white;
  border-radius: 50rpx;
  text-align: center;
  width: 270rpx;
  /* padding: 20rpx 0; */
  height: 80rpx;
  justify-content: center;
  font-size: 32rpx;
  border: 2rpx solid #79caff;
  line-height: 80rpx;
}

.skip {
  background: #79caff;
  border-radius: 40rpx;
  color: white;
  width: 200rpx;
  font-size: 24rpx;
  height: 50rpx;
  justify-content: center;
  /* padding: 20rpx 0; */
  text-align: center;
  margin: 0 20rpx;
  line-height: 50rpx;
}

.bottom_box_btn {
  width: 600rpx;
  height: 100rpx;
  position: fixed;
}

.share_btn_tranl {
  background: transparent;
  border: 0 solid transparent;
  width: 600rpx;
  height: 100rpx;
  border-radius: 50rpx;
  position: fixed;
  opacity: 0;
}

/*mask*/

.dialog-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.dialog_content {
  /* height: 210px;  */
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.dialog-box {
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: white;
  margin: -170px 125rpx 0 125rpx;
  border-radius: 10rpx;
}

.dialog-icon {
  width: 500rpx;
  height: 400rpx;
  display: inline-block;
}

.dialog-button-box {
  display: flex;
  align-items: center;
  background: transparent;
  justify-content: center;
  border-top: 1px solid #269b50;
  color: #269b50;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.dialog-cancel {
  padding: 30rpx;
  margin-right: 50rpx;
  height: 40rpx;
  width: 40rpx;
}

.dialog-ok {
  padding: 30rpx;
  height: 40rpx;
  width: 40rpx;
}

.dialog-ok-tx {
  padding: 10px;
  font: 32rpx "microsoft yahei";
  text-align: center;
  border-top: 1px solid #269b50;
  color: #269b50;
}


/* 自添 */

.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;     
  padding: 50rpx 0;
  box-sizing: border-box;
  z-index: 100;
  /* background: red; */
}

.page-btn {
  position: relative;
  margin-bottom: 30rpx;
  padding: 0;
  box-sizing: border-box;
  border: 2rppx solid gray;
  font-size: 32rpx;
  text-decoration: none;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  display: inline-block;
  width: 100%;
  height: auto;
  background-color: white;
  color: black;
}

.bottom-btn {
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 14px;
  padding-right: 14px;
  box-sizing: border-box;
  font-size: 18px;
  text-align: center;
  text-decoration: none;
  line-height: 2.55555556;
  border-radius: 5px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #000;
  background-color: #f8f8f8;
}

/* 运算符box */

.opr-box {
  width: 80%;
  height: 222rpx;
  /* display: flex; */
  flex-direction: column;
  justify-content: center;
  padding-left: 10rpx;
  align-items: center;
}

/* 一行运算符 */

.opr-box-line {
  height: 100rpx;
  display: flex;
  margin-bottom: 20rpx;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

/* 运算符 */

.operator {
  background: white;
  vertical-align: middle;
  border: 1rpx solid gray;
  text-align: center;
  line-height: 98rpx;
  height: 98rpx;
  font-size: 60rpx;
  margin: 0rpx 10rpx 10rpx 10rpx;
  border-radius: 10rpx;
  color: #3e4a53;
  width: 30%;
}

.equal-box {
  width: 20%;
  height: 222rpx;
  display: flex;
  margin-left: 10rpx;
  margin-right: 20rpx;
  justify-content: center;
}

/* = */

.equal-box-end {
  height: 220rpx;
  width: 100%;
}

.page-btn-wrap {
  width: 100%;
  text-align: center;
  z-index: 5;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 4个数字 */

.page-numbers {
  width: 100%;
  text-align: center;
  z-index: 5;
  display: flex;
  justify-content: center;
  position: relative;
  align-items: center;
  flex-direction: row;
}

.card {
  background: transparent;
  text-align: center;
  width: 150rpx;
  position: relative;
  display: flex;
  align-items: center;
  height: 250rpx;
  margin: 0 20rpx;
}

.active {
  opacity: 1;
}

.disabled {
  opacity: 0.2;
}

.card-bg {
  width: 150rpx;
  height: 250rpx;
  position: absolute;
}

.card-text {
  color: #3e4a53;
  font-size: 100rpx;
  position: absolute;
  font-weight: bold;
  width: 150rpx;
  text-align: center;
  line-height: 250rpx;
  height: 250rpx;
}
